<Dialog Name="ImageAutocorrelation" HelpFile="ImageAutocorrelation.html">
	<DialogComponent type="DialogMultiFile">
		<Name>inputFiles</Name>
		<Description>Enter the name of the input files here</Description>
		<LabelText>Input Raster Files:</LabelText>
		<Filter>Raster Files (*.dep), DEP</Filter>
		<IsVisible>True</IsVisible>
	</DialogComponent>
        
        <DialogComponent type="DialogComboBox">
		<Name>contiguity</Name>
		<Description>Select a contiguity case.</Description>
		<LabelText>Contiguity Type:</LabelText>
		<IsVisible>True</IsVisible>
		<ListItems>Rook's, King's, Bishop's</ListItems>
		<DefaultItem>0</DefaultItem>		
	</DialogComponent>
</Dialog>
