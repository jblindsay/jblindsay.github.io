<Dialog Name="PCAForAttributes" HelpFile="PCAForAttributes.html">
	<DialogComponent type="DialogFieldSelector">
		<Name>inputFields</Name>
		<Description>Please select a shapefile and fields from its database file.</Description>
		<LabelText>Which fields should be included in the analysis?</LabelText>
                <Multiselection>True</Multiselection>
                <IsVisible>True</IsVisible>
	</DialogComponent>
        <DialogComponent type="DialogCheckBox">
		<Name>standardizedPCA</Name>
		<Description>Perform a standardized (normalized) PCA?</Description>
		<LabelText>Perform a standardized PCA?</LabelText>
		<InitialState>True</InitialState>
		<IsVisible>True</IsVisible>
	</DialogComponent>
        <DialogComponent type="DialogDataInput">
		<Name>numberOfComponentsOutput</Name>
		<Description>How many components should be output?</Description>
		<LabelText>Number of output components:</LabelText>
		<IsVisible>True</IsVisible>
		<InitialText></InitialText>
		<NumericalInputOnly>True</NumericalInputOnly>
		<MakeOptional>True</MakeOptional>
	</DialogComponent>
</Dialog>
