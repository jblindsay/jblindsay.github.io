<Dialog Name="OSAVI" HelpFile="OSAVI.html">
	<DialogComponent type="DialogFile">
		<Name>InputFile</Name>
		<Description>Enter the name of the near-infrared band image here</Description>
		<LabelText>Input Near-Infrared Band Image File:</LabelText>
		<DialogMode>Open File</DialogMode>
		<Filter>Raster Files (*.dep), DEP</Filter>
		<IsVisible>True</IsVisible>
		<MakeOptional>False</MakeOptional>
		<ShowButton>True</ShowButton>
	</DialogComponent>
	<DialogComponent type="DialogFile">
		<Name>InputFile</Name>
		<Description>Enter the name of the red band image here</Description>
		<LabelText>Input Red Band Image File:</LabelText>
		<DialogMode>Open File</DialogMode>
		<Filter>Raster Files (*.dep), DEP</Filter>
		<IsVisible>True</IsVisible>
		<MakeOptional>False</MakeOptional>
		<ShowButton>True</ShowButton>
	</DialogComponent>
	<DialogComponent type="DialogFile">
		<Name>OutputFile</Name>
		<Description>Enter the name of the output file here</Description>
		<LabelText>Output OSAVI Raster File:</LabelText>
		<DialogMode>Save File</DialogMode>
		<Filter>Raster Files (*.dep), DEP</Filter>
		<IsVisible>True</IsVisible>
		<MakeOptional>False</MakeOptional>
		<ShowButton>True</ShowButton>
	</DialogComponent>
</Dialog>
