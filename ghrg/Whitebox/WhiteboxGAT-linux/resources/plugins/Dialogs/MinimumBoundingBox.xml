<Dialog Name="MinimumBoundingBox" HelpFile="MinimumBoundingBox.html">
	<DialogComponent type="DialogFile">
		<Name>inputFile</Name>
		<Description>Enter the name of the input vector file here. It must be a polygon or polyline base shapetype.</Description>
		<LabelText>Input Vector File:</LabelText>
		<DialogMode>Open File</DialogMode>
		<Filter>ShapeFile (*.shp), SHP</Filter>
		<IsVisible>True</IsVisible>
		<MakeOptional>False</MakeOptional>
		<ShowButton>True</ShowButton>
	</DialogComponent>
        <DialogComponent type="DialogComboBox">
		<Name>minimizationCriterion</Name>
                <Description>Minimization criterion</Description>
		<LabelText>Minimization Criterion:</LabelText>
		<IsVisible>True</IsVisible>
		<ListItems>Area, Perimeter</ListItems>
		<DefaultItem>0</DefaultItem>		
	</DialogComponent>
        <DialogComponent type="DialogFile">
		<Name>outputFileName</Name>
		<Description>Enter the name of the output file here</Description>
		<LabelText>Output Vector File</LabelText>
		<DialogMode>Save File</DialogMode>
		<Filter>ShapeFile (*.shp), SHP</Filter>
		<IsVisible>True</IsVisible>
		<MakeOptional>False</MakeOptional>
		<ShowButton>True</ShowButton>
	</DialogComponent>
        <DialogComponent type="DialogCheckBox">
		<Name>outputAsPolygons</Name>
		<Description>Output features as polygons?</Description>
                <LabelText>Output features as polygons?</LabelText>
		<InitialState>False</InitialState>
		<IsVisible>True</IsVisible>
	</DialogComponent>
</Dialog>
