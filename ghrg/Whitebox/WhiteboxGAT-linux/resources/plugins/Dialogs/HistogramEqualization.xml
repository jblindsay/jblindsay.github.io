<Dialog Name="HistogramEqualization" HelpFile="HistogramEqualization.html">
	<DialogComponent type="DialogMultiFile">
		<Name>inputFiles</Name>
		<Description>Enter the name of the input files here</Description>
		<LabelText>Input Raster Files:</LabelText>
		<Filter>Raster Files (*.dep), DEP</Filter>
		<IsVisible>True</IsVisible>
	</DialogComponent>
	<DialogComponent type="DialogDataInput">
		<Name>outputSuffix</Name>
		<Description>Enter the string to be appended to the end of the output file names here</Description>
		<LabelText>Output file suffix:</LabelText>
		<IsVisible>True</IsVisible>
		<InitialText>_HistoEqual</InitialText>
		<NumericalInputOnly>False</NumericalInputOnly>
		<MakeOptional>False</MakeOptional>
		<Width>60</Width>
	</DialogComponent>
        <DialogComponent type="DialogDataInput">
		<Name>numBins</Name>
		<Description>Enter the desired number of bins</Description>
		<LabelText>Number of bins:</LabelText>
		<IsVisible>True</IsVisible>
		<InitialText>256</InitialText>
		<NumericalInputOnly>True</NumericalInputOnly>
		<MakeOptional>False</MakeOptional>
		<Width>60</Width>
	</DialogComponent>
</Dialog>
